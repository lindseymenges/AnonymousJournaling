<h3 class="new_user_header">Make A New Account</h3>
<div class="new_user_form">
<p id="new_user_error_message">You need a username AND a password.</p>
  <%= form_for @user, :html => {:id => "new_user_form"} do |f| %>
    <%= f.text_field :username, :placeholder => "Username", :class => "new_user" %><br>
    <%= f.password_field :password, :placeholder => "Password", :class => "new_user" %><br>
    <%= f.submit "Create Account", :class => "new_user new_user_submit" %>
  <% end %>
</div>